{
    "version": 2,
    "builds": [
      { "src": "api/home.js", "use": "@vercel/node" },
      { "src": "api/user.js", "use": "@vercel/node" },
      { "src": "index.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/food/(.*)", "dest": "api/home.js" },
      { "src": "/api/food/([a-fA-F0-9]{24})", "dest": "api/home.js" },
      { "src": "/api/user/(.*)", "dest": "api/user.js" },
      { "src": "/(.*)", "dest": "index.js" }
    ]
  } 